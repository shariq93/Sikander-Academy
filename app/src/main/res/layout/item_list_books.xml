<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/circular_background_wh"
    >

        <ImageView
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:src="@drawable/ic_search_black"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Chapter"
            android:id="@+id/icon_book"/>


    <TextView
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon_book"
        android:layout_toRightOf="@+id/icon_book"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Subject Title"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:textColor="#000000"
        android:padding="5dp"
        android:gravity="center"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:id="@+id/btn_open_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon_book"
        android:layout_alignParentEnd="true"
        android:text="Click Here To Open"
        android:layout_alignParentRight="true" />

    <View
        android:visibility="gone"
        android:background="#000000"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/btn_open_book"
        android:layout_alignLeft="@+id/btn_open_book"
        android:layout_alignRight="@+id/btn_open_book"

        />


</RelativeLayout>